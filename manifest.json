{
  "manifest_version": 3,
  "name": "Loudness DD",
  "version": "1.0.0",
  "description": "LUFS-based tab volume balancer for Chrome",
  "action": {
    "default_popup": "index.html"
  },
  "background": {
    "service_worker": "src/background.ts",
    "type": "module"
  },
  "permissions": [
    "tabCapture",
    "tabs",
    "activeTab",
    "offscreen",
    "storage"
  ],
  "host_permissions": ["<all_urls>"]
}
